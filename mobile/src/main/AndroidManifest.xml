<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.guet.jjhome.indexsp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!-- <uses-permission android:name="android.permission.GET_ACCOUNTS" /> -->
    <!-- <uses-permission android:name="android.permission.READ_PROFILE" /> -->
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS" /> -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="edu.guet.jjhome.indexsp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="home.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="edu.guet.jjhome.indexsp.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.DetailsActivity"
            android:label="@string/activity_details"
            android:parentActivityName="edu.guet.jjhome.indexsp.activity.MainActivity" >
            <intent-filter>
                <action android:name=".Details" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.guet.jjhome.indexsp.activity.MainActivity" />
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.CreateMessageActivity"
            android:label="@string/title_activity_create_message"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.AboutActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.ChartActivity"
            android:label="@string/title_activity_chart" >
        </activity>
        <activity
            android:name="edu.guet.jjhome.indexsp.activity.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
    </application>

</manifest>
